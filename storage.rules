rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write files in their own directory under 'resumes_uploads'
    match /resumes_uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access by default
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }
  }
}
