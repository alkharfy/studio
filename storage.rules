
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reads and writes only if the user is authenticated
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

     // More specific rule for resume uploads: only the owner can write/read
     match /resumes_uploads/{userId}/{fileName} {
        // Allow user to write to their own folder
       allow write: if request.auth != null && request.auth.uid == userId;
       // Allow user to read files in their own folder
       allow read: if request.auth != null && request.auth.uid == userId;
     }
  }
}
