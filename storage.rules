rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Files are stored at resumes_uploads/{uid}/{fileName}
    match /resumes_uploads/{uid}/{fileName} {
      // Allow write (upload) if the user is authenticated and their UID matches the {uid} in the path.
      allow write: if request.auth != null && request.auth.uid == uid;
      // Allow read if the user is authenticated and their UID matches the {uid} in the path.
      allow read: if request.auth != null && request.auth.uid == uid;
    }

    // It's good practice to deny all other access by default if not explicitly allowed.
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }
  }
}
