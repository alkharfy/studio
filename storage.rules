rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match files in the resumes_uploads directory, segmented by user ID
    match /resumes_uploads/{userId}/{allPaths=**} {
      // Allow read and write access only if the requesting user's ID matches the {userId} in the path
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // You might want a more general rule for other paths, or keep it restrictive
    // Example: Allow public read for a 'public_assets' folder
    // match /public_assets/{allPaths=**} {
    //   allow read;
    // }
  }
}
