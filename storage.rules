rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match files in the resumes_uploads directory, under a user's UID
    match /resumes_uploads/{userId}/{fileName} {
      // Allow write operations (create, update, delete) if the user is authenticated
      // and their UID matches the {userId} in the path.
      allow write: if request.auth != null && request.auth.uid == userId;

      // Allow read operations if the user is authenticated
      // and their UID matches the {userId} in the path.
      // You might want to adjust this based on your app's sharing needs.
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // It's good practice to deny all other access by default
    // You can add more specific rules above this as needed
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
