rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to a 'public' folder if needed
    // match /public/{allPaths=**} {
    //   allow read;
    // }

    // Allow authenticated users to read and write their own files in resumes_uploads/{userId}/
    match /resumes_uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Example: Allow authenticated users to read and write their own files in a 'user_files' folder
    // match /user_files/{userId}/{allPaths=**} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }

    // Default deny all other access
    // match /{allPaths=**} {
    //   allow read, write: if false;
    // }
  }
}
